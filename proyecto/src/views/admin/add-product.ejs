<%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/styles-register.css">
    <title>FitFunWear</title>
    </head>

    <body>
        <%- include('../partials/header') %>
            <main>
                <div class="seccion">
                    <img class="logo" src="/img/icono-logo.ico" alt="Logo FitFunWear">
                </div>
                <div class="bienvenida">
                    <h1> AGREGAR NUEVO PRODUCTO </h1>
                </div>

                <form action="/products" method="POST" enctype="multipart/form-data">

                    <div class="etiquetaNombre">
                        <label>Nombre del producto</label>
                    </div>
                    <div class="nombreProducto">
                        <input type="text" placeholder="" name="nombre"
                            class="<%= locals.error && error.nombre ? 'border border-danger' : '' %> <%= locals.old && old.nombre ? 'border border-success': '' %>"
                            value="<%= locals.old && old.nombre ? old.nombre : '' %>">
                    </div>
                    <% if (locals.error && error.nombre) { %>
                        <p class="text-danger">
                            <%= error.nombre.msg %>
                        </p>
                        <% } %>

                            <div class="etiquetaDescripcion">
                                <label>Descripción del producto</label>
                            </div>
                            <div class="descripcionProducto">
                                <textarea name="descripcion" id="descripcion"
                                    class="form-input <%= locals.error && error.descripcion ? 'border border-danger' : '' %> <%= locals.old && old.descripcion ? 'border border-success': '' %>"><%= locals.old && old.descripcion ? old.descripcion : '' %></textarea>
                            </div>
                            <% if (locals.error && error.descripcion) { %>
                                <p class="text-danger">
                                    <%= error.descripcion.msg %>
                                </p>
                                <% } %>

                                    <div class="etiquetaImage">
                                        <label>Agrega una imagen</label>
                                    </div>
                                    <div class="imagenProducto">
                                        <input type="file" id="imagen" name="imagen" accept="image/*">
                                    </div>

                                    <div class="etiquetaCategoria">
                                        <label>Selecciona su categoría</label>
                                    </div>
                                    <div class="categoria">
                                        <select name="categoria" class="categoria mb-3" id="">
                                            <option value="" selected disabled>Selecciona categoria</option>
                                            <% for( let i=0; i < categories.length; i++ ) { %>
                                                <option value="<%= categories[i].id_category %>">
                                                    <%= categories[i].name %>
                                                </option>
                                                <% } %>
                                        </select>
                                    </div>
