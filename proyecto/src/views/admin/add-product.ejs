                                                                        <input type="checkbox" name="talla" value="22">
                                                                        22
                                                                        <input type="checkbox" name="talla"
                                                                            value="22.5"> 22.5
                                                                        <input type="checkbox" name="talla" value="23">
                                                                        23
                                                                        <input type="checkbox" name="talla"
                                                                            value="23.5"> 23.5
                                                                        <input type="checkbox" name="talla" value="24">
                                                                        24
                                                                        <input type="checkbox" name="talla"
