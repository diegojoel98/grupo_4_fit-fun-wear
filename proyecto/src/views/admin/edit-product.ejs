<%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/styles-register.css">
    <title>FitFunWear</title>
    </head>

    <body>
        <%- include('../partials/header') %>
            <main>
                <div class="seccion">
                    <img class="logo" src="/img/icono-logo.ico" alt="Logo FitFunWear">
                </div>
                <div class="bienvenida">
                    <h1> EDITAR PRODUCTO: <i>
                        <%= producto.id %></i>
                    </h1>
                </div>

                <form action="/products" method="POST">

                    <div class="etiquetaNombre">
                        <label>Nombre del producto</label>
                    </div>
                    <div class="nombreProducto">
                        <input type="text" placeholder="" name="nombre" value="<%= producto.nombre %>" required>
                    </div>

                    <div class="etiquetaDescripcion">
                        <label>Descripción del producto</label>
                    </div>
                    <div class="descripcionProducto">
                        <input type="text" placeholder="" name="descripcion" value="<%= producto.descripcion %>">
                    </div>

                    <div class="etiquetaImage">
                        <label>Agrega una imagen</label>
                    </div>
                    <div class="imagenProducto">
                        <input type="file" placeholder="" name="imagen" accept=".jpg">
                    <p>
                        <label class="img-actual">Imagen actual</span> <img src="/img/<%= producto.imagen %>" alt="Imagen actual"></label>
                    </p>
                    </div>

                    <div class="etiquetaCategoria">
                        <label>Selecciona su categoría</label>
                    </div>
                    <div class="categoria">
                        <input type="checkbox" name="categoria" value="tendencia"> Tendencia
                        <input type="checkbox" name="categoria" value="mas-vendidos"> Más vendidos
                        <input type="checkbox" name="categoria" value="Ofertas"> Ofertas
                    </div>
                    <div class="etiquetaGenero">
                        <label>Género</label>
                    </div>
                    <div class="genero">
                        <input type="radio" name="genero" value="hombre"> Hombre
                        <input type="radio" name="genero" value="mujer"> Mujer
                    </div>
                    <div class="etiquetaDisponibilidad">
                        <label>¿Producto disponible?</label>
                    </div>
                    <div class="disponibilidad">
                        <input type="radio" name="disponible" value="true"> Sí
                        <input type="radio" name="disponible" value="false"> No
                    </div>
                    <div class="etiquetaColor">
                        <label>Color</label>
                    </div>
                    <div class="categoria">
                        <input type="checkbox" name="color" value="Rosa"> Rosa
                        <input type="checkbox" name="color" value="Negro"> Negro
                        <input type="checkbox" name="color" value="Azul"> Azul
                        <input type="checkbox" name="color" value="Verde"> Verde
                        <input type="checkbox" name="color" value="Morado"> Morado
                        <input type="checkbox" name="color" value="Fucsia"> Fucsia
                        <input type="checkbox" name="color" value="Gris"> Gris
                        <input type="checkbox" name="color" value="Amarillo"> Amarillo
                        <input type="checkbox" name="color" value="Blanco"> Blanco
                        <input type="checkbox" name="color" value="Dorado"> Dorado
                        <input type="checkbox" name="color" value="Anaranjado"> Anaranjado
                        <input type="checkbox" name="color" value="Rojo"> Rojo
                    </div>

                    <div class="etiquetaTalla">
                        <label>Talla</label>
                    </div>
                    <div class="talla">
                        <input type="checkbox" name="talla" value="22"> 22
                        <input type="checkbox" name="talla" value="22.5"> 22.5
                        <input type="checkbox" name="talla" value="23"> 23
                        <input type="checkbox" name="talla" value="23.5"> 23.5
                        <input type="checkbox" name="talla" value="24"> 24
                        <input type="checkbox" name="talla" value="24.5"> 24.5
                        <input type="checkbox" name="talla" value="25"> 25
                        <input type="checkbox" name="talla" value="25.5"> 25.5
                        <input type="checkbox" name="talla" value="26"> 26
                        <input type="checkbox" name="talla" value="26.5"> 26.5
                        <input type="checkbox" name="talla" value="27"> 27
                        <input type="checkbox" name="talla" value="27.5"> 27.5
                        <input type="checkbox" name="talla" value="28"> 28
                        <input type="checkbox" name="talla" value="28.5"> 28.5
                        <input type="checkbox" name="talla" value="29"> 29
                        <input type="checkbox" name="talla" value="29.5"> 29.5
                    </div>

                    <div class="etiquetaModelo">
                        <label>Modelo</label>
                    </div>
                    <div class="modelo">
                        <input type="text" placeholder="" name="modelo" value="<%= producto.modelo %>">
                    </div>

                    <div class="etiquetaPrecio">
                        <label>Precio del producto</label>
                    </div>
                    <div class="precio">
                        <input type="text" placeholder="" name="precio" value="<%= producto.precio%>">
                    </div>

                    <div class="etiquetaDescuento">
                        <label>Descuento</label>
                    </div>
                    <div class="descuento">
                        <input type="text" placeholder="" name="descuento" value="<%= producto.descuento %>">
                    </div>

                    <div class="etiquetaCantidad">
                        <label>Cantidad</label>
                    </div>
                    <div class="cantidad">
                        <input type="text" placeholder="" name="cantidad" value="<%= producto.cantidad %>">
                    </div>

                    <div class="boton">
                        <button class="Enviar" type="submit">EDITAR</button>
                    </div>

                </form>

            </main>
            <%- include('../partials/footer') %>
    </body>

    </html>