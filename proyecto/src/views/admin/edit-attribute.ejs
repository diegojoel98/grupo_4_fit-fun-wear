<%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/styles-register.css">
    <title>FitFunWear</title>
    </head>

    <body>
        <%- include('../partials/header') %>
            <main>
                <div class="seccion">
                    <img class="logo" src="/img/icono-logo.ico" alt="Logo FitFunWear">
                </div>
                <div class="bienvenida">
                    <h1> EDITAR ATRIBUTO: <i>
                            <%= producto.id %>
                        </i>
                    </h1>
                </div>

                <form action="/attribute/edit/<%= producto.id %>?_method=PUT" method="POST" enctype="multipart/form-data">

                    <div class="etiquetaImage">
                        <label>Agrega una imagen</label>
                    </div>
                    <div class="imagenProducto">
                        <input type="file" placeholder="" name="imagen" accept="image/*">
                        <p>
                            <label class="img-actual">Imagen actual</span> <img src="/img/products/<%= producto.imagen %>"
                                    alt="Imagen actual"></label>
                        </p>
                    </div>

                    <div class="categoria">
                        <select name="categoria" class="categoria mb-3" id="">
                            <option value="" selected disabled>Selecciona categoria</option>
                            <% for( let i=0; i < categories.length; i++ ) { %>
                                <%if(producto.category_id == categories[i].id_category) {%>
                                    <option selected value="<%= categories[i].id_category %>">
                                        <%= categories[i].name %>
                                    </option>
                                <%}%>
                                <option value="<%= categories[i].id_category %>">
                                    <%= categories[i].name %>
                                </option>
                                <% } %>
                        </select>
                    </div>

                    <div class="etiquetaGenero">
                        <label>Género</label>
                    </div>
                    <div class="genero">
                        <input type="radio" class="m-1" name="genero" value="H" <%=producto &&
                            producto.genero=='H' ? 'checked' : '' %>> Hombre
                        <input type="radio" class="m-1" name="genero" value="M" <%=producto &&
                            producto.genero=='M' ? 'checked' : '' %>> Mujer
                        <input type="radio" class="m-1" name="genero" value="U" <%=producto &&
                        producto.genero=='U' ? 'checked' : '' %>> Unisex
                    </div>
                    <div class="etiquetaDisponibilidad">
                        <label>¿Producto disponible?</label>
                    </div>

                    <div class="disponibilidad">
                        <input type="radio" name="disponible" value="1" <%=producto.disponible == true ? 'checked' : '' %> > Sí
                        <input type="radio" name="disponible" value="0" <%=producto.disponible == false ? 'checked' : '' %> > No
                    </div>

                    <div class="etiquetaPrecio">
                        <label>Precio del producto</label>
                    </div>
                    <div class="precio">
                        <input type="text" placeholder="" name="precio" value="<%= producto.precio%>">
                    </div>

                    <div class="etiquetaDescuento">
                        <label>Descuento</label>
                    </div>
                    <div class="descuento">
                        <input type="text" placeholder="" name="descuento" value="<%= producto.descuento %>">
                    </div>

                    <div class="etiquetaCantidad">
                        <label>Cantidad</label>
                    </div>
                    <div class="cantidad">
                        <input type="text" placeholder="" name="cantidad" value="<%= producto.cantidad %>">
                    </div>

                    <div class="boton">
                        <button class="Enviar" type="submit">EDITAR</button>
                    </div>

                </form>

            </main>
            <%- include('../partials/footer') %>
    </body>

    </html>