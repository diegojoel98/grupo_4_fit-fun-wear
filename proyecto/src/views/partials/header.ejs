<header>
    <nav class="main-top-nav">
        <div class="img-logo">
            <a href="/">
                <img src="/img/Logo.svg" alt="Logo FitFunWear"></a>
        </div>
        <div class="main-list-nav">
            <p class="list-nav-item"><a href="/products/hombre">Hombre</a></p>
            <p class="list-nav-item"><a href="/products/mujer">Mujer</a></p>
            <p class="list-nav-item"><a href="/#ofertas">Ofertas</a></p>
        </div>
        <div class="search-bar">
            <!-- <input type="text" class=""> -->
            <form action="/search" method="POST" class="form-search d-none mr-3">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Busca algo..."
                        aria-label="Recipient's username" aria-describedby="basic-addon2" autocomplete="off">
                    <div class="input-group-append">
                        <button class="border border-light" type="submit"><span class="input-group-text"
                                id="basic-addon2"><i class="fas fa-search pointer"></i></span></button>
                    </div>
                </div>
            </form>
            <a id="icon-search" title="Buscar algo"><i class="fas fa-search pointer"></i></a>
        </div>
        <% if (!locals.isLog) { %>
            <div class=" user">
                <a href="/user/login" title="Iniciar sesión / Registrarse"><i class="fas fa-user pointer"></i></a>
            </div>
            <% } else { %>
                <div class="btn-group">
                    <button type="button" class="btn btn-white dropdown-toggle" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        <img src="/img/users/<%= userLog.image %> " alt="Imagen del usuario" width="45px"
                            style="border-radius: 100%;">
                        <%= userLog.name %>
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/products">Ir a todos los productos</a>
                        <div class="dropdown-divider"></div>
                        <% if (userLog.role_id == 1) { %>
                            <a class="dropdown-item" href="/admin">Administrador</a>
                            <div class="dropdown-divider"></div>
                        <% } %>
                        <a class="dropdown-item" href="/user/profile">Mi perfil</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/user/logout">Cerrar sesión</a>
                    </div>
                </div>
                <% } %>

                    <div class="shop-car">
                        <a href="/cart/index" title="Ver carrito"><i class="fas fa-shopping-cart pointer"></i></a>
                    </div>
                    <div class="bars">
                        <a href="#" title="Más opciones"><i class="fas fa-bars pointer"></i></a>
                    </div>
    </nav>
</header>
<script>
    let searchIcon = document.getElementById('icon-search');
    let searchForm = document.querySelector('.form-search');
    searchIcon.addEventListener('click', function (ev) {
        searchIcon.classList.add('d-none');
        searchForm.classList.toggle('d-none');
    })
</script>