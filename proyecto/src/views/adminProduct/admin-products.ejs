<%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/styles-index.css">
    <title>FitFunWear</title>
    </head>

    <body>
        <%- include('../partials/header') %>
        <main>
            <section class="trending">
                <% if (titelId===0) {%>
                    <h2 class="title-section">Todos los productos</h2>
                <%} %>
         
                <!-- Show the "tendencia" products. Se agrega el for -->
                <div class="trending-articles">
                    <% for (let producto of productos) { %>
                        
                        <article class="section-item pointer">


                                <img src="/img/products/<%= producto.image %>"
                                class="img-item" alt="ArtÃ­culo">

                                <p class="item-name"><%= producto.name %>
                                </p>

                                <div class="boton">
                                    <button type="button" class="btn btn-info mr-1"> <a class="text-white" href="/admin/edit/<%=producto.id_product%>">
                                            Editar</a></button>
                                    <button type="button" class="btn btn-info mr-1"> <a class="text-white" href="/attribute/<%=producto.id_product%>">
                                            Atributos</a></button>
                                    <form action="/admin/delete/<%=producto.id_product%>?_method=DELETE" method="POST"><button
                                            type="submit" class="btn btn-danger"> <a class="text-white"> Eliminar</a></button>
                                    </form>
                                </div>

                        </article>
                    <% } %>
                </div>
                <div class="boton">
                    <button class="newProduct"><a href="/admin/create">Crear un nuevo producto</a></button>
                </div>

            </section>
        </main>

        <%- include('../partials/footer') %>
    </body>

    </html>