<%- include('../partials/head') %>
    <link rel="stylesheet" href="css/styles_cart.css">
    <title>FunFitWear.Cart.</title>
</head>
<body>
    <header>
        <nav class="main-top-nav">
            <div class="img-logo">
                <a href="/">
                    <img src="/img/Logo.svg" alt="Logo FitFunWear"></a>
            </div>
            <div class="main-list-nav">
                <p class="list-nav-item"><a href="#">Hombre</a></p>
                <p class="list-nav-item"><a href="#">Mujer</a></p>
                <p class="list-nav-item"><a href="#">Ofertas</a></p>
            </div>
            <div class="search-bar">
                <a href="#" title="Buscar algo"><i class="fas fa-search pointer"></i></a>
            </div>
            <div class="user">
                <a href="/login" title="Iniciar sesión / Registrarse"><i class="fas fa-user pointer"></i></a>
            </div>
            <div class="shop-car">
                <a href="/cartV" title="Ver carrito"><i class="fas fa-shopping-cart pointer"></i></a>
            </div>
            <div class="bars">
                <a href="#" title="Más opciones"><i class="fas fa-bars pointer"></i></a>
            </div>
        </nav>
    </header>
    <section class="header-NoVacio">
        <h2>TU CARRITO DE COMPRA [1]</h2>
    </section>
    <main class="cart">
        <div class="products-selected">
            <section class="articulos">
                <article>
                    <div class="check">
                            <img src="/img/jade-tennis.jpg" alt="jade-tennis" class="product_img">
                            <div class="disponible">
                                <p>Disponible</p>
                            </div>
                    </div>
                    <div class="desc-article">
                            <h5>Tenis para hombre marca NIKE</h5>
                            <label >COLOR<p class="color">Verde</p></label>
                            <label>TALLA<p class="size">27</p></label>
                            <label>MODELO<p class="modelo">Lorem Ipsum</p></label>
                            <div class="cantidad-total">
                                <label>Cantidad
                                    <select>
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                        <option>6</option>
                                        <option>7</option>
                                        <option>8</option>
                                        <option>9</option>
                                        <option>10</option>
                                    </select></label>
                                <label class="subtotal">$2270.00</label>
                            </div>
                            <div class="cart-modify">
                                <div class="editar">
                                    <label>EDITAR</label>
                                </div>
                                <div class="eliminar">
                                    <label>ELIMINAR</label>
                                </div>
                            </div>
    
                    </div>
    
                </article>
                <article>
                    <div class="check">
                        <img src="img/conjuntofila.jpg" alt="jade-tennis" class="product_img">
                        <div class="disponible">
                            <p>Disponible</p>
                        </div>
                    </div>
                    <div class="desc-article">
                        <h5 class="description">Conjunto de short y playera marca FILA</h5>
                        <label >COLOR<p class="color">Azul</p></label>
                        <label>TALLA<p class="size">L</p></label>
                        <label>MODELO<p class="modelo">Lorem Ipsum</p></label>
                        <div  class="cantidad-total">
                            <label>Cantidad
                                <select>
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                    <option>6</option>
                                    <option>7</option>
                                    <option>8</option>
                                    <option>9</option>
                                    <option>10</option>
                                </select></label>
                            <label class="subtotal">$2270.00</label>
                        </div>
                        <div class="cart-modify">
                            <div class="editar">
                                <label>EDITAR</label>
                            </div>
                            <div class="eliminar">
                                <label>ELIMINAR</label>
                            </div>
                        </div>
                    </div>
                </article>
                

            </section>
            <div class="a-pagar">
                <section class="subtotal-final">
                    <div class="row-total">
                        <p>SUBTOTAL</p>
                        <p>$4540.00</p>
                    </div>
                    <div class="row-total">
                        <p>GASTOS DE ENVÍO</p>
                        <p>$0.00</p>
                    </div>
                </section>
                <section class="total-final">
                    <div class="row-total-fin">
                        <p>TOTAL</p>
                        <p>$4540.00</p>
                    </div>
                </section>
                <label id= "pagar"><button>PAGAR</button></label>
            </div>
        </div>
        <section class="carousel">
            <i class="fas fa-chevron-left pointer"><a href="#" title="Previo"></a></i>
            <img src="/img/dusan-jovic-uTlMDzkAz-M-unsplash.jpg" alt="Imagen de carrusel" class="pointer">
            <img src="/img/daria-volkova-E8N5sAI7Bpw-unsplash.jpg" alt="Imagen de carrusel" class="pointer">
            <i class="fas fa-chevron-right pointer"></i>
        </section>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>
